<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd
           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">
	
	<context:annotation-config />
	<!-- <bean class="org.springframework.retry.annotation.RetryConfiguration" />  -->
	
	<bean id="pricingHelper" class="com.sap.cx.commerce.externalservices.pricing.PricingHelper">
		<property name="b2bCustomerService" ref="b2bCustomerService"/>
		<property name="b2bUnitService" ref="b2bUnitService"/>		
	</bean>
	
	<alias alias="priceService" name="externalPriceService"/>
	<bean id="externalPriceService" class="com.sap.cx.commerce.externalservices.pricing.ExternalPriceService">
		<property name="originalPriceService" ref="defaultPriceService"/>
		<property name="userService" ref="userService"/>
		<property name="i18NService" ref="i18NService"/>
		<property name="baseStoreService" ref="baseStoreService"/>
		<property name="sessionService" ref="sessionService"/>
		<property name="pricingHelper" ref="pricingHelper"/>
		<property name="externalPriceServiceCaller" ref="externalPriceServiceCaller"/>
	</bean>
	
	<bean id="externalFindPriceStrategy" class="com.sap.cx.commerce.externalservices.pricing.ExternalFindPriceStrategy">
		<property name="originalFindPriceStrategy" ref="currentFactoryFindPricingStrategy"/>
		<property name="pricingHelper" ref="pricingHelper"/>
		<property name="sessionService" ref="sessionService"/>
		<property name="externalPriceServiceCaller" ref="externalPriceServiceCaller"/>
	</bean>
	
	<alias name="externalCalculationService" alias="calculationService"/>
	<bean id="externalCalculationService" class="de.hybris.platform.order.impl.DefaultCalculationService" parent="defaultCalculationService">
		<property name="findPriceStrategy" ref="externalFindPriceStrategy"/>
	</bean>
	
	<bean id="noAuthRestTemplateCreator" class="com.sap.cx.commerce.externalservices.jalo.DefaultIntegrationNoAuthRestTemplateCreator" parent="abstractRestTemplateCreator">
		<property name="configurationService" ref="configurationService"/>
	</bean>
	
	<util:list id="defaultIntegrationRestTemplateStrategiesList"
			   value-type="de.hybris.platform.integrationservices.client.IntegrationRestTemplateCreator" >
		<ref bean="integrationBasicRestTemplateCreator"/>
		<ref bean="integrationOAuth2RestTemplateCreator"/>
		<ref bean="noAuthRestTemplateCreator"/>
	</util:list>
	
	<bean id="externalPriceServiceCaller" class="com.sap.cx.commerce.externalservices.pricing.ExternalPriceServiceCaller">
		<property name="integrationRestTemplateFactory" ref="integrationRestTemplateFactory"/>
	</bean>
	
</beans>
