<config xmlns="http://www.hybris.com/cockpit/config"
		xmlns:wz="http://www.hybris.com/cockpitng/config/wizard-config"
		xmlns:y="http://www.hybris.com/cockpit/config/hybris"
		xmlns:editorArea="http://www.hybris.com/cockpitng/component/editorArea"
		xmlns:explorer-tree="http://www.hybris.com/cockpitng/config/explorertree"
		xmlns:simple-search="http://www.hybris.com/cockpitng/config/simplesearch"
		xmlns:advanced-search="http://www.hybris.com/cockpitng/config/advancedsearch"
		xmlns:list-view="http://www.hybris.com/cockpitng/component/listView"
		xmlns:na="http://www.hybris.com/cockpitng/config/notifications">

		<context component="explorer-tree" merge-by="module">
		<explorer-tree:explorer-tree xmlns:explorer-tree="http://www.hybris.com/cockpitng/config/explorertree">
			<explorer-tree:navigation-node id="hmc_treenode_system" merge-mode="append">
				<explorer-tree:navigation-node id="hmc_treenode_apiregistry">
					<explorer-tree:type-node code="DestinationTarget" id="treenode_destinationTarget"/>
					<explorer-tree:type-node code="EventConfiguration" id="treenode_eventConfiguration"/>
					<explorer-tree:type-node code="ProcessEventConfiguration" id="treenode_processEventConfiguration"/>
					<explorer-tree:type-node code="SaveEventConfiguration" id="treenode_saveEventConfiguration"/>
					<explorer-tree:navigation-node id="treenode_destination">
						<explorer-tree:type-node code="ExposedDestination" id="treenode_exposedDestination"/>
						<explorer-tree:type-node code="ConsumedDestination" id="treenode_consumedDestination"/>
					</explorer-tree:navigation-node>
					<explorer-tree:navigation-node id="treenode_credential">
						<explorer-tree:type-node code="BasicCredential" id="treenode_basicCredential"/>
						<explorer-tree:type-node code="ConsumedCertificateCredential" id="treenode_consumedCertificateCredential"/>
						<explorer-tree:type-node code="ConsumedOAuthCredential" id="treenode_consumedOAuthCredential"/>
						<explorer-tree:type-node code="ExposedOAuthCredential" id="treenode_exposedOAuthCredential"/>
					</explorer-tree:navigation-node>
					<explorer-tree:type-node code="Endpoint" id="treenode_endpoint"/>
					<explorer-tree:type-node code="EventExportDeadLetter" id="EventExportDeadLetter"/>
				</explorer-tree:navigation-node>
			</explorer-tree:navigation-node>
		</explorer-tree:explorer-tree>
	</context>
	
	<context type="SaveEventConfiguration" component="simple-search" merge-by="type" parent="GenericItem">
		<simple-search:simple-search includeSubtypes="false">
			<simple-search:field name="exportName"/>
			<simple-search:sort-field name="exportName" asc="false" />
		</simple-search:simple-search>
	</context>
	
	<context type="SaveEventConfiguration" component="create-wizard" merge-by="module">
		<wz:flow id="EventConfigurationWizard" title="create.title(ctx.TYPE_CODE)" merge-mode="append">
			<wz:step id="step1" label="" merge-mode="append">
				<wz:content id="step1.content">
					<wz:property-list root="newObject">
						<wz:property qualifier="saveType"/>
						<wz:property qualifier="saveEvent"/>
						<wz:property qualifier="destinationTarget" description="field.eventconfiguration.destinationTarget.description"/>
						<wz:property qualifier="priority" description="field.eventconfiguration.priority.description"/>
						<wz:property qualifier="version" description="field.eventconfiguration.version.description"/>
						<wz:property qualifier="exportName" exclude="true"/>
						<wz:property qualifier="eventClass" exclude="true"/>
						<wz:property qualifier="exportFlag" exclude="true"/>
						<wz:property qualifier="mappingType" exclude="true"/>			
						<wz:property qualifier="converterBean" exclude="true"/>
						<wz:property qualifier="eventPropertyConfigurations" exclude="true"/>
						<wz:property qualifier="creationtime" exclude="true" />
					</wz:property-list>
				</wz:content>
			</wz:step>
		</wz:flow>
	</context>
	
	
	<context type="SaveEventConfiguration" component="listview">
		<list-view:list-view>
			<list-view:column qualifier="saveType"  width="35%"/>
			<list-view:column qualifier="saveEvent"  width="35%"/>
			<list-view:column qualifier="exportName" />
			<list-view:column label="field.destinationtarget.id.description" qualifier="destinationTarget==null?'' : destinationTarget.id" />
			<list-view:column qualifier="version" />
			<list-view:column qualifier="exportFlag" />
		</list-view:list-view>
	</context>
	
	<context type="SaveEventConfiguration" component="editor-area" merge-by="type" parent="EventConfiguration">
		<editorArea:editorArea>
			<editorArea:tab name="eventConfiguration_tab_ec" position="0" merge-mode="append">
				<editorArea:section name="eventConfiguration_section_essential" merge-mode="replace">
					<editorArea:attribute qualifier="saveType" description="field.processeventconfiguration.process.description"/>
					<editorArea:attribute qualifier="saveEvent" description="field.processeventconfiguration.process.description"/>
				</editorArea:section>
				<editorArea:section name="eventConfiguration_section_configuration" merge-mode="remove"/>
			</editorArea:tab>
			<editorArea:tab name="saveeventConfiguration_tab_enrich" position="1" merge-mode="append">
			<editorArea:section name="eventConfiguration_section_configuration" columns="2" merge-mode="replace">
					<editorArea:attribute qualifier="filter">
					<editorArea:editor-parameter>
                            <editorArea:name>rows</editorArea:name>
                            <editorArea:value>10</editorArea:value>
                        </editorArea:editor-parameter>
					</editorArea:attribute>
					<editorArea:attribute qualifier="enricher">
					<editorArea:editor-parameter>
                            <editorArea:name>rows</editorArea:name>
                            <editorArea:value>10</editorArea:value>
                        </editorArea:editor-parameter>
					</editorArea:attribute>
					<editorArea:attribute qualifier="saveEventAttributes"/>
				</editorArea:section>
				</editorArea:tab>
		</editorArea:editorArea>
	</context>
	
	<context type="SaveEventAttribute" component="base" merge-by="type" parent="GenericItem">
        <y:base>
            <y:labels>
                <y:label>qualifier</y:label>
            </y:labels>
        </y:base>
    </context>
    
    <context type="SaveEventAttribute" component="create-wizard" merge-by="module">
		<wz:flow id="SaveEventAttributeWizard" title="create.title(ctx.TYPE_CODE)" merge-mode="append">
			<wz:step id="step1" label="" merge-mode="append">
				<wz:content id="step1.content">
					<wz:property-list root="newObject">
						<wz:property qualifier="qualifier"/>
						<wz:property qualifier="title"/>
						<wz:property qualifier="description" />
						<wz:property qualifier="attributeType" />
						<wz:property qualifier="saveEventConfiguration" exclude="true" />
						<wz:property qualifier="creationTime" exclude="true" />
					</wz:property-list>
				</wz:content>
			</wz:step>
		</wz:flow>
	</context>
	
	<context type="SaveEventAttribute" component="editor-area" merge-by="type" parent="EventConfiguration">
		<editorArea:editorArea>
			<editorArea:tab name="eventConfiguration_tab_ec" position="0" merge-mode="append">
				<editorArea:section name="eventConfiguration_section_essential" merge-mode="append">
					<editorArea:attribute qualifier="qualifier" />
					<editorArea:attribute qualifier="title" />
					<editorArea:attribute qualifier="description" />
					<editorArea:attribute qualifier="attributeType" />
				</editorArea:section>
				</editorArea:tab>
		</editorArea:editorArea>
	</context>
	
</config>
